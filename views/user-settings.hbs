<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                Update your Information
            </div>
            <div class="card-body">
                <form action="/auth/settings" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="form-control" placeholder="Your Name" value="{{ user.name }}">
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Your username" value="{{ user.username }}">
                    </div>
                    {{!-- <div class="form-group">
                        <label for="username">Email</label>
                        <input type="text" name="email" id="email" class="form-control" placeholder="Your email" value="{{ user.email }}">
                    </div> --}}
   
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Your Password">
                    </div>
                    <div class="form-group">
                        <button>Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>